@using Myoutlet.ge.ViewModels
@model ViewModel
@{
    ViewBag.Title = "რეკლამები";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
            <div class="container-fluid">
                @if (Model.Adds.Count < 2)
                {
                <a href="/main/admin/newadd" class="btn mb-3 btn-success">ახალი რეკლამა</a>
                }
                <div id="partners" class="card mb-3">
                    <div class="card-header">
                        <i class="fas fa-table"></i>
                        რეკლამები
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>ლინკი</th>
                                        <th>ფოტო</th>
                                        <th id="sts"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var add in Model.Adds)
                                    {
                                        <tr>
                                            <td>@add.Linkd</td>
                                            <td>@add.ImgName</td>
                                            <td>
                                                <a href="/main/admin/Removeadd/@add.Id" class="btn btn-danger dngr">წაშლა</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>