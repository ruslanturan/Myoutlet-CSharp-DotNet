@using Myoutlet.ge.ViewModels
@model ViewModel
@{
    ViewBag.Title = "კამპანიები";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
            <div class="container-fluid">
                @if (Model.Campaigns.Count < 4)
                {
                <a href="/main/admin/newcampaign" class="btn mb-3 btn-success">ახალი კამპანიის დამატება</a>
                }
                <div id="partners" class="card mb-3">
                    <div class="card-header">
                        <i class="fas fa-table"></i>
                        კამპანიები
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>სახელი</th>
                                        <th id="sts"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var campaign in Model.Campaigns)
                                    {
                                        <tr>
                                            <td>@campaign.Name</td>
                                            <td>
                                                <a href="/main/admin/RemoveCampaign/@campaign.Id" class="btn btn-danger dngr">წაშლა</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>