@using Myoutlet.ge.ViewModels
@model ViewModel
@{
    ViewBag.Title = "Ქვეკატეგორიები";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
            <div class="container-fluid">
                <a href="/main/admin/AddKind" class="btn mb-3 btn-success">Ახალი Ქვეკატეგორიის Დამატება</a>
                <div id="partners" class="card mb-3">
                    <div class="card-header">
                        <i class="fas fa-table"></i>
                        Ქვეკატეგორიები
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Სახელი</th>
                                        <th>Კატეგორია</th>
                                        <th id="stsBtn"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var kind in Model.Kinds)
                                    {
                                    <tr>
                                        <td>
                                            <a href="/home/Productbykind/@kind.Id">@kind.Name</a>
                                        </td>
                                        <td>
                                            <a href="/home/KindbyCategory/@kind.Category.Id">@kind.Category.Name</a>
                                        </td>
                                        <td>
                                            <a href="/main/admin/RemoveKind/@kind.Id" class="btn btn-primary rmvv">Წაშლა</a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>