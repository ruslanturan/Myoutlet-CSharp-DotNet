@using Myoutlet.ge.Models
@model FbLink
@{
    ViewBag.Title = "Სოციალური Გვერდების Მისამართები";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
            <div class="container-fluid">
                <div class="container">
                    <div class="card card-register mx-auto mt-5">
                        <div class="card-header">Facebook გვერდის მისამართი</div>
                        <div class="card-body">
                            <form class="register" method="post">
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(m => m.Id)
                                <div class="form-group">
                                    <div class="form-label-group">
                                        @Html.TextBoxFor(m => m.Link, new { type = "text", id = "Link", name = "Link", @class = "form-control", placeholder = "Facebook გვერდის მისამართი" })
                                        @Html.LabelFor(m => m.Link, "Facebook გვერდის მისამართი")
                                    </div>
                                </div>
                                <button class="btn btn-primary btn-block" type="submit">Დამახსოვრება</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>