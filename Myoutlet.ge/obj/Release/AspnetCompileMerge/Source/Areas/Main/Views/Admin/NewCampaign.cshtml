@using Myoutlet.ge.Models
@model Campaign
@{
    ViewBag.Title = "Ახალი Კამპანია";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
            <div class="container-fluid">
                <div class="container">
                    <div class="card card-register mx-auto mt-5">
                        <div class="card-header">Ახალი Კამპანია</div>
                        <div class="card-body">
                            <form class="register" method="post" enctype="multipart/form-data">
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <div class="form-label-group">
                                        <input type="text" id="Name" name="Name" class="form-control" placeholder="Კამპანიის სახელი" required="required" autofocus="autofocus">
                                        <label for="Name">Კამპანიის სახელი</label>
                                    </div>
                                </div>
                                <div class="form-group ad-img">
                                    <input type="file" id="CompLogo" name="image" />
                                    <ul class="img-list">
                                        <li class="add-img" id="logo">
                                            <i class="fas fa-camera text-center"></i>
                                            <p class="text-center mt-3">Სურათის ატვირთვა</p>
                                        </li>
                                    </ul>
                                </div>
                                <button class="btn btn-primary btn-block" id="ad" type="submit">Დამახსოვრება</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>