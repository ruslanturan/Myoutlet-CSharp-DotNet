@using Myoutlet.ge.ViewModels
@model ViewModel
@{
    ViewBag.Title = "Კომენტარი Დამტკიცების Მოლოდინშია";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
            <div class="container-fluid">
                <div id="partners" class="card mb-3">
                    <div class="card-header">
                        <i class="fas fa-table"></i>
                        Კომენტარები
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Სახელი</th>
                                        <th>ᲔᲚ- Ფოსტა</th>
                                        <th>Ტექსტი</th>
                                        <th>Პროდუქტი</th>
                                        <th id="sts"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var comment in Model.Comments)
                                    {
                                        <tr>
                                            <td>
                                                @comment.Name
                                            </td>
                                            <td>
                                                @comment.Email
                                            </td>
                                            <td>@comment.Text</td>
                                            <td>
                                                <a href="/home/product/@comment.Product.Id">
                                                    @comment.Product.Name
                                                </a>
                                            </td>
                                            <td>
                                                <a href="/main/admin/ConfirmComment/@comment.Id" class="btn btn-success cmntcn">Დადასტურება</a>
                                                <a href="/main/admin/RemoveComment/@comment.Id" class="btn btn-danger cmntrmv">Წაშლა</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>