<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title</title>
    <link rel="icon" href="~/Images/logo2.png">
    <link href="~/style.css" rel="stylesheet" />
</head>
<body>
    <div class="preloader d-flex align-items-center justify-content-center">
        <div class="spinner">
            <div class="double-bounce1"></div>
            <div class="double-bounce2"></div>
        </div>
    </div>
    <header class="header-area">
        <div class="mag-main-menu" id="sticker">
            <div class="classy-nav-container breakpoint-off">
                <nav class="classy-navbar justify-content-between" id="magNav">
                    <a href="/home/index" class="nav-brand">
                        <img src="~/Images/logo.png" alt="">
                    </a>
                    <div class="classy-navbar-toggler">
                        <span class="navbarToggler">
                            <span></span>
                            <span></span>
                            <span></span>
                        </span>
                    </div>
                    <div class="nav-content d-flex align-items-center">
                        <div class="classy-menu">
                            <div class="classycloseIcon">
                                <div class="cross-wrap">
                                    <span class="top"></span>
                                    <span class="bottom"></span>
                                </div>
                            </div>
                            <div class="classynav">
                                <ul>
                                    <li class="active">
                                        <a href="/home/index">Მთავარი</a>
                                    </li>
                                    <li>
                                        <a href="/home/aboutus">Ჩვენ Შესახებ</a>
                                    </li>
                                    <li>
                                        <a href="/home/partners">Პარტნიორები</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="top-meta-data d-flex align-items-center">
                            <div class="top-search-area">
                                <form action="/home/search" method="post">
                                    <input type="search" name="search" id="topSearch" placeholder="search in products...">
                                    <button type="submit" class="btn">
                                        <i class="fa fa-search" aria-hidden="true"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </header>
    @RenderBody()
    <footer class="footer-area">
        <div class="container">
            <div class="row">
                <div class="col-12 col-sm-6 col-lg-3">
                    <div class="footer-widget">
                        <a href="/home/index" class="foo-logo">
                            <img src="~/Images/logo.png" alt="">
                        </a>
                    </div>
                </div>
                <div class="col-12 col-sm-6 col-lg-3">
                    <div class="footer-widget">
                        <h6 class="widget-title">გამოგვყევით</h6>
                        <div class="footer-social-info">
                            @if (Model.FbLink != null)
                            {
                                <a href="//@Model.FbLink.Link" class="facebook">
                                    <i class="fa fa-facebook"></i>
                                </a>
                            }
                            @if (Model.InstaLink != null)
                            {
                                <a href="//@Model.InstaLink.Link" class="instagram">
                                    <i class="fa fa-instagram"></i>
                                </a>
                            }
                            @if (Model.YoutubeLink != null)
                            {
                                <a href="//@Model.YoutubeLink.Link" class="YouTube">
                                    <i class="fa fa-youtube"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-12 col-sm-6 col-lg-3">
                    <div class="footer-widget">
                        <h6 class="widget-title">სკონტაქტო ინფორმაცია</h6>
                        @if (Model.info != null)
                        {
                            <nav class="footer-widget-nav">
                                <ul>
                                    <li>
                                        <a>
                                            <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                                            (+995) @Model.info.MobilePhone
                                        </a>
                                    </li>
                                    <li>
                                        <a>
                                            <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                                            @Model.info.Mail
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        }
                    </div>
                </div>
                <div class="col-12 col-sm-6 col-lg-3">
                    <div class="footer-widget">
                        <h6 class="widget-title">Ჩვენ Შესახებ</h6>
                        @if (Model.info != null)
                        {
                            <div class="single-blog-post style-2 d-flex">
                                <div class="post-content">
                                    <a class="post-title">
                                        <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                                        @Model.info.LittleInfo
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="copywrite-area">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-sm-6">
                        <p class="copywrite-text">
                            All rights reserved | &copy; MyOutlet.ge
                            <script>document.write(new Date().getFullYear());</script>
                        </p>
                    </div>
                    <div class="col-12 col-sm-6">
                        <nav class="footer-nav">
                            <ul>
                                <li>
                                    <a>Site Created By IOstarter</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/js/jquery/jquery-2.2.4.min.js"></script>
    <script src="~/js/bootstrap/bootstrap.min.js"></script>
    <script src="~/js/bootstrap/popper.min.js"></script>
    <script src="~/js/plugins/plugins.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/web-animations/2.2.2/web-animations.min.js"></script>
    <script src="~/js/active.js"></script>
    <script src="~/js/rangeslider.js"></script>
</body>
</html>
