
@{
    ViewBag.Title = "Შესვლა";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


        <div class="card card-login mx-auto mt-5">
            <div class="card-header">Შესვლა</div>
            <div class="card-body">
                <form method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <div class="form-label-group">
                            <input type="email" id="email" name="email" class="form-control" placeholder="Შეიყვანეთ ელ-ფოსტა" required="required" autofocus="autofocus">
                            <label for="email">Შეიყვანეთ ელ-ფოსტა</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-label-group">
                            <input type="password" id="pass" name="pass" class="form-control" placeholder="Პაროლი" required="required">
                            <label for="pass">Პაროლი</label>
                        </div>
                    </div>
                    @Html.ValidationMessage("LoginError", new { @class = "text-danger" })
                <button class="btn btn-primary btn-block" type="submit">Შესვლა</button>
                </form>
                <div class="text-center">
                    <a class="d-block small" href="/main/login/forgot_pass">Დაკარგული Პაროლი</a>
                </div>
            </div>
        </div>
