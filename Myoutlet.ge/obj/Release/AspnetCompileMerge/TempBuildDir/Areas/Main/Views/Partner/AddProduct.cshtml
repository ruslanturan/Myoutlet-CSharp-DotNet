@using Myoutlet.ge.ViewModels
@model ViewModel
@{
    ViewBag.Title = "Ახალი Პროდუქტის Დამატება";
    Layout = "~/Views/Shared/_LayoutPartner.cshtml";
}
            <div class="container-fluid">
                <div class="container">
                    <div class="card card-register mx-auto mt-5 mb-5">
                        <div class="card-header">Ახალი Პროდუქტის Დამატება</div>
                        <div class="card-body">
                            <input type="hidden" id="ptId" value="@Model.Partner.Id" />
                            <form method="post" enctype="multipart/form-data" id="prdct">
                                @Html.AntiForgeryToken()
                                <input type="hidden" id="descStr" name="descString" />
                                <input type="hidden" id="prdtcUnique" name="ProductUniqueNum" />
                                <div class="form-group">
                                    <label for="Category">Კატეგორიის Არჩევა</label>
                                    <div class="form-label-group">
                                        <select id="Category" name="CategoryId" class="form-control">
                                            <option value="0">Კატეგორიის</option>
                                            @foreach (var ct in Model.Categories)
                                            {
                                                <option value="@ct.Id">@ct.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="Kind">Ქვეკატეგორიის Არჩევა</label>
                                    <div class="form-label-group">
                                        <select id="Kind" name="KindId" class="form-control">
                                            <option value="0">Ქვეკატეგორიის</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label-group">
                                        <input type="text" id="Name" name="Name" class="form-control" placeholder="Პროდუქტის სახელი">
                                        <label for="Name">Პროდუქტის სახელი</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label-group">
                                        <input type="number" onkeydown="javascript: return event.keyCode == 69 ? false : true" id="Cost" name="Cost" class="form-control" placeholder="Პროდუქტის ღირებულება">
                                        <label for="Cost">Პროდუქტის ღირებულება</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label-group">
                                        <input type="number" onkeydown="javascript: return event.keyCode == 69 ? false : true" , id="Sale" name="SaleInPercent" class="form-control" placeholder="Პროდუქტის ფასდაკლება">
                                        <label for="Sale">შეიყვანეთ პროცენტი (0-100.00) თუ პროდუქტს გააჩნია ფასდაკლება</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-label-group">
                                        <input type="text" id="ShoppingLink" name="ShoppingLink" class="form-control" placeholder="Მაღაზიის ლინკი">
                                        <label for="ShoppingLink">Მაღაზიის ლინკი</label>
                                    </div>
                                </div>
                                <label class="ml-1" for="">დაამატე პროდუქტის აღწერა</label>
                                <p id="if">(თუ არ გსურთ სათაურის დამატება ჩვენ გამოვიყენებთ)</p>
                                <div class="text-center mb-3" id="dcs">
                                    <button class="btn btn-primary" id="dc">Ახალი აღწერის დამატება</button>
                                </div>
                                <div class="from-group mb-3">
                                    <div id="hdTxt" class="form-row" style="display: none;">
                                        <div class="col-md-6">
                                            <div class="form-label-group">
                                                <input type="text" id="heading" class="form-control" placeholder="Heading">
                                                <label for="heading">Სათაური</label>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-label-group">
                                                <input type="text" id="description" class="form-control" placeholder="Description">
                                                <label for="description">Აღწერა</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div id="dcTxt" class="form-row mb-3" style="display: none;">
                                        <div class="col-md-6">
                                            <div class="form-label-group">
                                                <input type="text" id="value" class="form-control" placeholder="Description value">
                                                <label for="value">Აღწერის მნიშვნელობა</label>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <button id="desc" class="btn btn-success">Დამატება</button>
                                        </div>
                                        <div class="col-md-3">
                                            <button id="cls" class="btn btn-danger">Დახურვა</button>
                                        </div>
                                    </div>
                                </div>
                                <label class="ml-1" for="">სურათის დამატება პროდუქტისთვის</label>
                                <p id="if">
                                    (ამ გვერდზე იქნება კარგი სურათების დახარისხება)
                                </p>
                                <div class="form-group ad-img">
                                    <input type="file" id="Gallery" name="img" multiple />
                                    <ul class="img-list">
                                        <li class="add-img" id="addImgs">
                                            <i class="fas fa-camera text-center"></i>
                                            <p class="text-center">სურათის ატვირთვა</p>
                                            <p id="more" class="text-center">მაქს. 15 სურათი</p>
                                        </li>
                                    </ul>
                                </div>
                                <button class="btn btn-success btn-block" id="addProduct" type="submit">Დაამატე Პროდუქტი</button>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- Scroll to Top Button-->
                <a class="scroll-to-top rounded" href="#page-top">
                    <i class="fas fa-angle-up"></i>
                </a>
            </div>