@using Myoutlet.ge.ViewModels
@model ViewModel
@{
    ViewBag.Title = "Პროდუქტები";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
            <div class="container-fluid">
                <div id="partners" class="card mb-3">
                    <div class="card-header">
                        <i class="fas fa-table"></i>
                        Პროდუქტები
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Სახელი</th>
                                        <th>Კატეგორია</th>
                                        <th>Ქვეკატეგორია</th>
                                        <th>Კომპანიის Სახელი</th>
                                        <th>Სტატუსი</th>
                                        <th id="stsBtn"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model.Products)
                                    {
                                    <tr>
                                        <td>
                                            <a href="/home/product/@product.Id">@product.Name</a>
                                        </td>
                                        <td>@product.Category.Name</td>
                                        <td>@product.Kind.Name</td>
                                        <td>
                                            <a href="/home/partner/@product.Partner.Id">@product.Partner.CompanyName</a>
                                        </td>
                                        @if (@product.Status == true)
                                        {
                                            <td>აქტიური</td>
                                        }
                                        @if (@product.Status == false)
                                        {
                                            <td>დაბლოკილი</td>
                                        }
                                        @if (@product.Status == null)
                                        {
                                            <td>დასტურის მოლოდინში</td>
                                        }
                                        <td>
                                            <a href="/main/admin/ChangeAddStatus/@product.Id" class="stsPrdtc sbmt btn btn-warning">Დასტურის Მოლოდინში</a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
