@using Myoutlet.ge.ViewModels
@model ViewModel
@{
    ViewBag.Title = "Კატეგორიები";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
 }
            <div class="container-fluid">
                <a href="/main/admin/AddCategory" class="btn mb-3 btn-success">Ახალი Კატეგორიის Დამატება</a>
                <div id="partners" class="card mb-3">
                    <div class="card-header">
                        <i class="fas fa-table"></i>
                        Კატეგორიები
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Სახელი</th>
                                        <th id="stsBtn"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var category in Model.Categories)
                                    {
                                        <tr>
                                            <td>
                                                <a href="/home/KindbyCategory/@category.Id">@category.Name</a>
                                            </td>
                                            <td>
                                                <a href="/main/admin/RemoveCategory/@category.Id" class="btn btn-primary rmvv">Წაშლა</a>
                                            </td>                                            
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>